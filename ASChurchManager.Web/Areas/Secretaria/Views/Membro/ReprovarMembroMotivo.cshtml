@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Membro.ReprovarViewModel

@{
    ViewBag.Title = "Reprovar Membro";
    Layout = "~/Views/Shared/_PopUp.cshtml";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        Reprovar Membro
                    </h3>
                </div>
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.MotivoReprovacao, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.MotivoReprovacao, 11, 100, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MotivoReprovacao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="box-footer">
                    <div style="text-align-last:right" class="col-lg-12">
                        <a href="javascript:void(0)" id="lnkMotivoReprovacao" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Reprovar Membro
                        </a>
                        <a href="javascript:void(0)" id="lnkFechar" class="btn btn-default">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Fechar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts
{
    <script src="~/js/reprovarmembro.min.js"></script>
}
