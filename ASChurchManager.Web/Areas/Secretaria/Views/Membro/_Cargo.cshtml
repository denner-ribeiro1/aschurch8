@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Membro.CargoVM

<fieldset>
    <legend>Cargos</legend>
    @if (!Model.IsReadOnly)
    {
        <div class="form-group">
            <div class="col-sm-4">
                @Html.Label("cargo", "Cargo", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.CargoId, Model.SelectCargos, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CargoId, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-3 ">
                @Html.LabelFor(model => model.LocalConsagracao, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.LocalConsagracao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-sm-2 ">
                @Html.LabelFor(model => model.DataCargo, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DataCargo, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.DataCargo, "", new { @class = "text-danger" })
            </div>
        </div>
        <p style="clear: both" />
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Confradesp, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Confradesp, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(model => model.CGADB, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CGADB, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-sm-3">
                <br />
                <button type="button" class="btn btn-primary" id="btnAddCargo">
                    <span class="glyphicon glyphicon-plus"></span> Adicionar
                </button>
                <button type="button" class="btn btn-warning" id="btnCancCargo">
                    <span class="glyphicon glyphicon-ban-circle"></span> Cancelar
                </button>
            </div>
        </div>
        <p style="clear: both" />
    }
    <div class="box-body jtable-main-container">
        <table style="width:100%" id="tbCargos" class="jtable">
            <thead>
                <tr>
                    <th class="jtable-column-header" style="width:20%;"><span class="jtable-column-header-text">Cargo</span></th>
                    <th class="jtable-column-header" style="width:20%;"><span class="jtable-column-header-text">Local de Consagração</span></th>
                    <th class="jtable-column-header" style="width:10%;"><span class="jtable-column-header-text">Data</span></th>
                    <th class="jtable-column-header" style="width:15%;"><span class="jtable-column-header-text">Confradesp Nº</span></th>
                    <th class="jtable-column-header" style="width:15%;"><span class="jtable-column-header-text">CGADB Nº</span></th>
                    @if (!Model.IsReadOnly)
                    {
                        <th class="jtable-column-header" style="width:20%;"></th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    @if (!Model.IsReadOnly)
                    {
                        <td colspan="6">Não há Cargos cadastrados para o Membro</td>
                    }
                    else
                    {
                        <td colspan="5">Não há Cargos cadastrados para o Membro</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</fieldset>


