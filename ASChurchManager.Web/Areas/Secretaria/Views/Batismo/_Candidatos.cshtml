@model IEnumerable<ASChurchManager.Web.Areas.Secretaria.ViewModels.Batismo.CandidatosBatismoVM>

<div class="form-group">
    <fieldset>
        <legend>Candidatos ao Batismo</legend>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12 jtable-main-container">
                    <table style="width:100%" id="tbPastor" class="jtable">
                        <thead>
                            <tr>
                                <th class="jtable-column-header" style="width: 10%;">
                                    <div class="jtable-column-header-container">
                                    </div>
                                </th>
                                <th class="jtable-column-header" style="width: 10%;">
                                    <div class="jtable-column-header-container">
                                        <span class="jtable-column-header-text">Cód.Registro</span>
                                    </div>
                                </th>
                                <th class="jtable-column-header" style="width: 35%;">
                                    <div class="jtable-column-header-container">
                                        <span class="jtable-column-header-text">Membro</span>
                                    </div>
                                </th>
                                <th class="jtable-column-header" style="width: 10%;">
                                    <div class="jtable-column-header-container">
                                        <span class="jtable-column-header-text">Data Nasc.</span>
                                    </div>
                                </th>
                                <th class="jtable-column-header" style="width: 35%;">
                                    <div class="jtable-column-header-container">
                                        <span class="jtable-column-header-text">Congregação</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="5">
                                        Não existem Candidatos cadastrados para o Batismo
                                    </td>
                                </tr>
                            }
                            else
                            {
                                var i = 0;
                                foreach (var item in Model)
                                {
                                    string css = $"jtable-data-row{((i % 2 == 0) ? " jtable-row-even" : "")}";
                                    <tr class="@css">
                                        <td>
                                            <input type="checkbox" checked="checked" class="ckbMembro" data-membroid="@item.Id" data-toggle="toggle" data-on="Presente" data-off="Ausente">
                                        </td>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Nome
                                        </td>
                                        <td>
                                            @item.DataNascimento.Value.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @item.CongregacaoNome
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <p style="clear: both" />
    </fieldset>
</div>
