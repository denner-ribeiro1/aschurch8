@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Membro.ObservacaoVM

@Html.Hidden("idUsuarioObs", ASChurchManager.Web.Lib.UserAppContext.Current.Usuario.Id)
@Html.Hidden("nomeUsuarioObs", ASChurchManager.Web.Lib.UserAppContext.Current.Usuario.Nome)

<fieldset>
    <legend>Observações</legend>
    @if (!Model.IsReadOnly)
    {
        <div class="form-group">
            <div class="col-sm-4">
                @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Observacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.DataCadastroObs, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DataCadastroObs, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.DataCadastroObs, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
                <br />
                <button type="button" class="btn btn-primary" id="btnAddObs">
                    <span class="glyphicon glyphicon-edit"></span> Adicionar
                </button>
                <button type="button" class="btn btn-warning" id="btnCancObs">
                    <span class="glyphicon glyphicon-ban-circle"></span> Cancelar
                </button>
            </div>
        </div>
        <p style="clear: both" />
    }
    <div class="box-body jtable-main-container">
        <table style="width:100%" id="tbObs" class="jtable">
            <thead>
                <tr>
                    <th class="jtable-column-header" style="width:40%;"><span class="jtable-column-header-text">Observação</span></th>
                    <th class="jtable-column-header" style="width:15%;"><span class="jtable-column-header-text">Data de Cadastro</span></th>
                    <th class="jtable-column-header" style="width:25%;"><span class="jtable-column-header-text">Resp.p/Cadastro</span></th>
                    @if (!Model.IsReadOnly)
                    {
                        <th class="jtable-column-header" style="width:20%;"></th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    @if (!Model.IsReadOnly)
                    {
                        <td colspan="4">Não há Observações cadastradas para o Membro</td>
                    }
                    else
                    {
                        <td colspan="3">Não há Observações cadastradas para o Membro</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</fieldset>
