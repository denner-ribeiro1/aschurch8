@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Membro.ArquivoMembroVM

<p style="clear: both" />
<fieldset>
    <legend>Documentos Digitalizados</legend>
    @if (!Model.IsReadOnly)
    {
        <form id="files" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.LabelFor(model => model.DescricaoArquivo)
                    @Html.TextBoxFor(model => model.DescricaoArquivo, Model.IsReadOnly ? (object)new { @disabled = "disabled", @class = "form-control" } : new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DescricaoArquivo, "", new { @class = "text-danger" })
                </div>
                <p style="clear: both" />
                <div class="col-sm-6">
                    @Html.LabelFor(model => model.Arquivo, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Arquivo, Model.IsReadOnly ? (object)new { @disabled = "disabled", @class = "form-control" } : new { @class = "form-control", type = "file", name = "Arquivo", accept = "application/pdf" })
                    @Html.ValidationMessageFor(model => model.Arquivo, "", new { @class = "text-danger" })
                </div>
                <br />
                <button type="button" class="btn btn-primary" id="btnAddArq">
                    <span class="glyphicon glyphicon-plus"></span> Adicionar
                </button>
                <button type="button" class="btn btn-warning" id="btnCancArq">
                    <span class="glyphicon glyphicon-ban-circle"></span> Cancelar
                </button>
            </div>
        </form>
        <p style="clear: both" />
    }
    <div class="box-body jtable-main-container">
        <table style="width:100%" id="tbArq" class="jtable">
            <thead>
                <tr>
                    <th class="jtable-column-header" style="width:40%;"><span class="jtable-column-header-text">Descrição</span></th>
                    <th class="jtable-column-header" style="width:20%;"><span class="jtable-column-header-text">Nome do Arquivo</span></th>
                    <th class="jtable-column-header" style="width:20%;"><span class="jtable-column-header-text"></span>Tamanho</th>
                    <th class="jtable-column-header" style="width:20%;"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4">Não há Documentos cadastrados para o Membro</td>
                </tr>
            </tbody>
        </table>
    </div>
</fieldset>
