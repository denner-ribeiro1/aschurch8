@model ASChurchManager.Web.Areas.Secretaria.Models.Relatorio.PresencaVM

<style type="text/css">
    .alinhar {
        margin-top: 5px;
    }

    .checkbox {
        margin-top: 25px;
    }

    .Centeralign {
        text-align: center;
    }
</style>

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Relatório de Lista de Frequência</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-sm-6">
                @Html.LabelFor(model => model.PresencaId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.PresencaId, Model.ListaPresenca, "Todos", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PresencaId, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(model => model.DataId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.DataId, Model.ListaData, "Todas", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DataId, "", new { @class = "text-danger" })
            </div>
        </div>
        <p style="clear: both" />
        <div class="row">
            <div class="col-sm-6">
                @Html.LabelFor(model => model.CongregacaoId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.CongregacaoId, Model.ListaCongregacoes, "Todas", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CongregacaoId, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(model => model.SituacaoSelecionado, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.SituacaoSelecionado, Model.ListaSituacao, "Todos", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SituacaoSelecionado, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(model => model.TipoSaida, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.TipoSaida, Model.SelectTipoSaida, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoSaida, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="box-footer">
            <div class="row">
                <div class="col-sm-12">
                    <button type="button" class="btn btn-primary" id="btnRelPresFreq">
                        <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Imprimir
                    </button>
                    <a href="@Url.Action("Index", "Home", new { Area = ""})" class="btn btn-default">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/js/relatorios.min.js"></script>

    <script type="text/javascript">
        var urlBuscarDatas = '@Url.Action("GetDatasPresenca", "Relatorios", new { area = "Secretaria"})';
        var urlRelFreq = '@Url.Action("RelatorioPresencaFrequencia", "Relatorios", new { area = "Secretaria"})';
    </script>
}