@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Relatorio.CursoMembroVM

<section class="content">
    <div class="row" />
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                    Relatório de Cursos
                </h3>
            </div>
            <div class="box-body">
                <div>
                    <fieldset>
                        <legend>Filtros</legend>
                        <div class="col-sm-4">
                            @Html.LabelFor(model => model.Cursos, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.Cursos, Model.SelectCursos, "Todos", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Cursos, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-4">
                            @Html.LabelFor(model => model.Congregacao, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.Congregacao, Model.SelectCongregacoes, "Todas", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Congregacao, "", new { @class = "text-danger" })
                        </div>
                        <p style="clear: both" />
                        <div class="col-sm-3">
                            @Html.LabelFor(model => model.TipoSaida, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.TipoSaida, Model.SelectTipoSaida, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TipoSaida, "", new { @class = "text-danger" })
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-primary" id="btnRelCursosMembro">
                    <span class="glyphicon glyphicon-print"></span> Gerar Relatório
                </button>
                <a href="@Url.Action("Index", "", new { area = "" })" class="btn btn-default">
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Voltar
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    var urlRelCur = "@Url.Action("RelatorioCursosMembro", "Relatorios", new { Area = "Secretaria" })"
</script>

@section scripts{
    <script type="text/javascript" src="~/js/relatorios.min.js"></script>
}
