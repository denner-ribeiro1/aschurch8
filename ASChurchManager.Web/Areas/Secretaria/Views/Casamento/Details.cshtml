@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Casamento.CasamentoViewModel

@{
    ViewBag.Title = "Casamento_Details";
}

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        Casamento - Detalhes
                    </h3>
                </div>
                <div class="box-body">
                    @await Html.PartialAsync("_Casamento", Model)
                </div>
                <div class="box-footer">
                    <a href="@Url.Action("Edit", "Casamento", new { id = Model.CasamentoId })" class="btn btn-primary">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
                    </a>

                    <a href="javascript:excluirCasamento()" id="lnkExcluir" class="btn btn-danger" data-casamentoid="@Model.CasamentoId">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
                    </a>
                    <a href="@Url.Action("Index", "Casamento")" class="btn btn-default">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    var urlExcluir = "@Url.Action("Delete", "Casamento", new { Area = "Secretaria" })";
</script>

@section scripts{
    <script type="text/javascript" src="~/js/casamento.min.js"></script>
}