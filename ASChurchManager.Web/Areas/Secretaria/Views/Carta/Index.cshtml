@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Carta.IndexCartaVM

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Emissão de Cartas</h3>
    </div>
    <div class="box-body">
        <div style="padding-top:0px;padding-bottom:10px">
            <a href="@Url.Action("Create", "Carta" )" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Novo
            </a>
        </div>
        <div class="box box-default collapsed-box">
            <div class="box-header with-border">
                <h5 class="box-title">Filtros</h5>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body" style="display: none;">
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Filtro, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.Filtro, Model.Filtros, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div id="padrao" style="display:block">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Conteudo, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Conteudo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div id="congregacao" style="display:none">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Conteudo, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.CongregacaoSelecionado, Model.ListaCongregacoes, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div id="tipoCarta" style="display:none">
                        <div class="col-md-3">
                            <label>Tipo</label>
                            @Html.DropDownListFor(model => model.TipoCartaSelecionado, Html.GetEnumSelectList(typeof(ASChurchManager.Domain.Types.TipoDeCarta)), htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            <label>Status</label>
                            @Html.DropDownListFor(model => model.StatusCartaSelecionado, Html.GetEnumSelectList(typeof(ASChurchManager.Domain.Types.StatusCarta)), "Todas", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <br />
                        <button type="button" class="btn btn-default" id="btnPesquisar">
                            <span class="glyphicon glyphicon-search"></span> Pesquisar
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div id="grdCarta" />
    </div>
</div>

<script type="text/javascript">
    var urlList = '@Url.Action("GetList", "Carta", new { area = "Secretaria"})';
    var urlNovo = '@Url.Action("Create", "Carta", new { area = "Secretaria"})';
    var urlDetalhes = '@Url.Action("Details", "Carta", new { area = "Secretaria"})';
    var urlPrint = '@Url.Action("Imprimir", "Carta", new { area = ""})';
    var urlAprovar = '@Url.Action("AprovarCarta", "Carta", new { area = "Secretaria"})';
</script>

@section scripts
{
    <script type="text/javascript" src="~/js/indexcarta.min.js"></script>
}