@model ASChurchManager.Web.Areas.Secretaria.ViewModels.Congregacao.ObreiroVM

@Html.Hidden("isreadonlyobreiro", Model.IsReadOnly)
<div class="form-group">
    <fieldset>
        <legend>Obreiros</legend>
        @if (!Model.IsReadOnly)
        {
            <div class="col-sm-2">
                <a href="javascript:void(0)" id="lnkObreiroId" class="control-label">Cód.Membro</a>
                @Html.EditorFor(model => model.ObreiroId, new { htmlAttributes = Model.IsReadOnly ? (object)new { @disabled = "disabled", @class = "form-control" } : new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ObreiroId, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(model => model.ObreiroNome, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.ObreiroNome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ObreiroCargo, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.ObreiroCargo, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.ObreiroCargo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-sm-2">
                <br />
                <input id="btnAddObr" type="button" value="Adicionar" class="btn btn-primary" />
            </div>
            <p style="clear: both" />
        }
        <div class="box-body jtable-main-container">
            <table style="width:100%" id="tbObreiro" class="jtable">
                <thead>
                    <tr>
                        @if (!Model.IsReadOnly)
                        {
                            <th class="jtable-column-header" style="width:20%;"><span class="jtable-column-header-text">Cód. Membro</span></th>
                            <th class="jtable-column-header" style="width:40%;"><span class="jtable-column-header-text">Nome</span></th>
                            <th class="jtable-column-header" style="width:40%;" colspan="2"><span class="jtable-column-header-text">Cargo</span></th>
                        }
                        else
                        {
                            <th class="jtable-column-header" style="width:20%;"><span class="jtable-column-header-text">Cód. Membro</span></th>
                            <th class="jtable-column-header" style="width:40%;"><span class="jtable-column-header-text">Nome</span></th>
                            <th class="jtable-column-header" style="width:40%;"><span class="jtable-column-header-text">Cargo</span></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @if (!Model.IsReadOnly)
                        {
                            <td colspan="4">Não há Obreiros cadastrados para o Congregação</td>
                        }
                        else
                        {
                            <td colspan="3">Não há Obreiros cadastrados para o Congregação</td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </fieldset>
</div>