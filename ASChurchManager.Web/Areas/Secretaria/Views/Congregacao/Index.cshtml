@model ASChurchManager.Web.Areas.Secretaria.Models.Congregacao.IndexVM

<div class="box box-primary">
    
    <div class="box-header with-border">
        <h3 class="box-title">Congregações</h3>
    </div>
    <div class="box-body">
        <div style="padding-top:0px;padding-bottom:10px">
            <a href="@Url.Action("Create", "Congregacao")" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Novo
            </a>
        </div>
        <div class="box box-default collapsed-box">
            <div class="box-header with-border">
                <h5 class="box-title">Filtros</h5>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body" style="display: none;">
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Filtro, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.Filtro, Model.Filtros, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div id="padrao" style="display:block">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Conteudo, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Conteudo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <br />
                        <button type="button" class="btn btn-default" id="btnPesquisar">
                            <span class="glyphicon glyphicon-search"></span> Pesquisar
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div id="grdCongr" />
    </div>
</div>

<script type="text/javascript">
    var urlList = '@Url.Action("GetList", "Congregacao", new { area = "Secretaria"})';
    var urlDetalhes= '@Url.Action("Details", "Congregacao", new { area = "Secretaria"})';
</script>

@section scripts
{
    <script src="~/js/indexcongregacao.min.js"></script>
}