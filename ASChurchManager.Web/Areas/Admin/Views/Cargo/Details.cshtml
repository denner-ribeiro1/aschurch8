@model ASChurchManager.Web.Areas.Admin.ViewModels.Cargo.CargoViewModel

@{
    ViewBag.Title = "Cargos_Details";
}

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        Cargo - Detalhes
                    </h3>
                </div>
                <div class="box-body">
                    <div style="height: 100%;"></div>
                    <div>
                        <div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                <div class="col-sm-5">
                                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                                <div class="col-sm-5">
                                    @Html.LabelFor(model => model.TipoCarteirinha, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.TipoCarteirinha, Html.GetEnumSelectList(Model.TipoCarteirinha.GetType()), optionLabel: "", htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                </div>
                            </div>
                            <p style="clear: both" />
                            <div class="form-group">
                                <div class="col-sm-5">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(model => model.Obreiro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                        @Html.LabelFor(model => model.Obreiro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(model => model.Lider, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                        @Html.LabelFor(model => model.Lider, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                            <p style="clear: both" />
                            <div class="form-group">
                                <div class="col-sm-5">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(model => model.Confradesp, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                        @Html.LabelFor(model => model.Confradesp, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(model => model.CGADB, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                        @Html.LabelFor(model => model.CGADB, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                            <p style="clear: both" />
                            <div class="form-group">
                                @Html.EditorFor(model => model, "DataCriacaoAlteracao")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="@Url.Action("Edit", "Cargo", new { id = Model.Id })" class="btn btn-primary">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
                    </a>
                    <a href="javascript:void(0)" id="lnkExcluir" class="btn btn-danger" data-cargoid="@Model.Id">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
                    </a>
                    <a href="@Url.Action("Index", "Cargo")" class="btn btn-default">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    var urlExcluir = "@Url.Action("Delete", "Cargo", new { Area = "Admin" })"
</script>

@section scripts{
    <script type="text/javascript" src="~/js/cargo.min.js"></script>
}