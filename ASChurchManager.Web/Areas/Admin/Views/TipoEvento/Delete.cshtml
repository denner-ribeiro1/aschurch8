@model ASChurchManager.Web.Areas.Admin.ViewModels.TipoDeEvento.TipoEventoViewModel

@{
    ViewBag.Title = "TipoEvento_Delete";
}

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        Tipo de Evento - Exclusão
                    </h3>
                </div>
                <div class="box-body">
                    <div style="height: 100%;"></div>
                    <div>
                        <h3 style="color: red">Você tem certeza de que deseja excluir este registro?</h3>
                        <div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                            </div>
                            <p style="clear: both" />
                            <div class="form-group">
                                @Html.EditorFor(model => model, "DataCriacaoAlteracao")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    @using (Html.BeginForm())
                    {
                        
                        <div class="form-actions no-color">
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>