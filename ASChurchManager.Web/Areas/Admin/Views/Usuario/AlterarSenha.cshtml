@model ASChurchManager.Web.Areas.Admin.ViewModels.Usuario.AlteracaoSenhaUsuarioViewModel


@using (Html.BeginForm("AlterarSenha", "Usuario", FormMethod.Post))
{
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">
                            Alteração de Senha
                        </h3>
                    </div>
                    <div class="box-body">
                        <div style="height: 100%;"></div>
                        <div>
                            @Html.HiddenFor(m => m.AlterarSenhaProxLogin)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.EditorFor(model => model, "AlteracaoSenha")
                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-warning">
                                    <span class="glyphicon glyphicon-retweet"></span> Alterar Senha
                                </button>
                                @{
                                    if (ViewBag.ExibirVoltar)
                                    {
                                        <a href="@Url.Action("Index", "Usuario")" class="btn btn-default">
                                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Voltar
                                        </a>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
