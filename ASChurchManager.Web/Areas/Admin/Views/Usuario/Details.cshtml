@model ASChurchManager.Web.Areas.Admin.ViewModels.Usuario.UsuarioViewModel

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        Usuário - Detalhes
                    </h3>
                </div>
                <div class="box-body">
                    <div style="height: 100%;"></div>
                    <div>
                        <div>
                            <hr />
                            <div class="form-group">
                                <div class="col-sm-2">
                                    @Html.LabelFor(model => model.CongregacaoId, new { htmlAttributes = new { @class = "form-label" } })
                                    @Html.EditorFor(model => model.CongregacaoId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                                <div class="col-sm-4">
                                    @Html.LabelFor(model => model.CongregacaoNome, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CongregacaoNome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.CongregacaoNome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <p style="clear: both" />
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PerfilId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.PerfilId, Model.SelectPerfil, "", new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <fieldset>
                                <legend>
                                    Permissões Adicionais
                                </legend>
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.PermiteAprovarMembro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })&emsp;
                                    @Html.LabelFor(model => model.PermiteAprovarMembro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.PermiteImprimirCarteirinha, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })&emsp;
                                    @Html.LabelFor(model => model.PermiteImprimirCarteirinha, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.PermiteExcluirSituacaoMembro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })&emsp;
                                    @Html.LabelFor(model => model.PermiteExcluirSituacaoMembro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.PermiteExcluirCargoMembro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })&emsp;
                                    @Html.LabelFor(model => model.PermiteExcluirCargoMembro, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.PermiteExcluirObservacaoMembro, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })&emsp;
                                    @Html.LabelFor(model => model.PermiteExcluirObservacaoMembro, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.PermiteExcluirMembros, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })&emsp;
                                    @Html.LabelFor(model => model.PermiteExcluirMembros, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.PermiteCadBatismoAposDataMaxima, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })&emsp;
                                    @Html.LabelFor(model => model.PermiteCadBatismoAposDataMaxima, htmlAttributes: new { @class = "control-label", @disabled = "disabled" })
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="box-footer">
                        <a href="@Url.Action("AlterarSenha", "Usuario", new { id = Model.Id, exibirVoltar = true })" class="btn btn-warning">
                            <span class="glyphicon glyphicon-retweet" aria-hidden="true"></span> Alterar Senha
                        </a>
                        <a href="@Url.Action("Edit", "Usuario", new { id = Model.Id })" class="btn btn-primary">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
                        </a>
                        <a href="javascript:void(0)" id="lnkExcluir" class="btn btn-danger" data-cargoid="@Model.Id">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
                        </a>
                        <a href="@Url.Action("Index", "Usuario")" class="btn btn-default">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Voltar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    var urlUsuarioDuplicado = "@Url.Action("VerificaUsuarioDuplicado", "Usuario", new { Area = "Admin" })";
    var urlBuscarCongregacao = "@Url.Action("BuscarCongregacao", "Congregacao", new { Area = "Secretaria" })";
    var urlExcluir = "@Url.Action("Delete", "Usuario", new { Area = "Admin" })"
</script>


@section scripts{
    <script type="text/javascript" src="~/js/usuario.min.js"></script>
}